generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}



enum CompletionStatus {
    completed
    skipped
    failed
}

// checkpoint type is to separate tasks by section, and checkpoint is basically the header of the section
enum TaskType {
    task
    checkpoint
}

model TaskCompletion {
    id         String           @id @default(auto()) @map("_id") @db.ObjectId
    task_id    String           @db.ObjectId
    task       Task             @relation(fields: [task_id], references: [id])
    date       DateTime
    status     CompletionStatus @default(completed)
    notes      String?
    created_at DateTime         @default(now())
    updated_at DateTime         @updatedAt

    @@unique([task_id, date])
}

model Task {
    id                String           @id @default(auto()) @map("_id") @db.ObjectId
    name              String
    duration          Int
    order             Int
    routine_id        String           @db.ObjectId
    routine           Routine          @relation(fields: [routine_id], references: [id])

    start_date        DateTime         @default(now())
    end_date          DateTime?
    completions       TaskCompletion[]
    type              TaskType         @default(task)

    @@index([routine_id])
}



model Routine {
    id          String       @id @default(auto()) @map("_id") @db.ObjectId
    name        String
    icon        String?
    duration    Int?
    tasks       Task[]
    user_id     String // clerk user id
    is_favorite Boolean      @default(false)


    @@index([user_id])
}
